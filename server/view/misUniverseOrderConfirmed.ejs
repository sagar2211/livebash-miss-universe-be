    <style type="text/css">
      * {
        font-family: 'Sora', sans-serif;
        font-style: normal;
      }
      p {
        margin: 0px;
      }
      body {
        background: #000000;
        color: #fff;
      }

      h1 {
        margin: unset;
      }

      .event-info {
        position: relative;
        z-index: 1;
      }

      .eventBgBlack {
        position: relative;
        background: url('https://livebashcode.s3.ap-south-1.amazonaws.com/email-template-images/order-confirmed-round.png')
          no-repeat;
        background-size: 100% 100%;
        margin: -48px 0 0;
        width: auto;
        height: 116px;
        padding: 21px -12px 0;
      }

      /*.eventBgBlack::after {
      content: "";
